<!doctype html>
<html>
	<head>
		<title>BCKCHN.NL</title>
		<script src="/nowjs/now.js"></script>
		<script type="text/javascript" src="http://use.typekit.com/hto4izk.js"></script>
		<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
		<link rel="stylesheet/less" type="text/css" href="/static/css/reset.css">
		<link rel="stylesheet/less" type="text/css" href="/static/css/index.less">
		<script src="/static/js/less-1.1.3.min.js" type="text/javascript"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script>
		<script src="/static/js/cookie.js" type="text/javascript"></script>
		<script src="/static/js/ejs.js" type="text/javascript"></script>
		<script>
			eval(<%= "bckchn_key='"+me.key+"'" %>);
			eval(<%= "bckchn_secret='"+me.secret+"'" %>);
		</script>
		
	</head>
	<body>
		<div id="client">
			<% if (prompt) { %>
				<%-partial(prompt)%>
			<% } %>
			<div id="sidebar">
				<div id="logo" class="tk-domoyouji">
					bckchn.nl
				</div>
				<% if(me) { %>
				<div id="me">
					<img 
						class="avatar" 
						src="http://www.gravatar.com/avatar/<%=me.email_hash%>?f=y&d=retro"
					/>
					<span class="username">
						<%=me.username%>
					</span>
					<br />
					<span class="karma">
						<span class="value"><%=me.karma%></span> karma
					</span>
				</div>
				<% } %>
				<ul id="channels">
					<li>
						<a href="#" class="selected">Global</a>
					</li>
					<li>
						<a href="#">~jennings</a>
					</li>
				</ul>
				<div id="settings">
				</div>
			</div>
			<div id="chat">
				<div id="featured">
				</div>
				<ol class="channel_global" id="messages">
				</ol>
			</div>
			<div id="footer">
				<div id="settings">
					Settings
				</div>
				<form id="composer">
					<table 
						border="0" 
						width="100%" 
						cellpadding="0" 
						cellspacing="0">
						<tr>
							<td>
								<input id="composer_message" type="text" name="message" />
							</td>
							<td width="6.5em">
								<input id="composer_submit" type="submit" name="submit" value="send"/>
							</td>
						</tr>
					</table>
				</form>
			</div>
		</div>
		<script src="/static/js/client.js" type="text/javascript"></script>
	</body>
</html>